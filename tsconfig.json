{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2019",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strict": true,
    "sourceMap": true,
    "rootDir": "src",
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "#*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
}